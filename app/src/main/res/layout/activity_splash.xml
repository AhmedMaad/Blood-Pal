<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp" />

    <ImageView
        android:id="@+id/blood_iv"
        android:layout_width="260dp"
        android:layout_height="192dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/blood_pal_logo"
        app:layout_constraintEnd_toEndOf="@id/container_cv"
        app:layout_constraintStart_toStartOf="@id/container_cv"
        app:layout_constraintTop_toTopOf="@id/container_cv" />

    <TextView
        android:id="@+id/blood_pal_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="Blood Pal"
        android:textColor="@color/black"
        android:textSize="56sp"
        app:layout_constraintTop_toBottomOf="@id/blood_iv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="-Blood - Our lifeline-"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/blood_pal_tv" />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Log in"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/container_cv" />

    <View
        android:id="@+id/view"
        android:layout_width="8dp"
        android:layout_height="32dp"
        android:layout_marginBottom="24dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/container_cv"
        app:layout_constraintEnd_toEndOf="@id/container_cv"
        app:layout_constraintStart_toStartOf="@id/container_cv" />

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/container_cv" />

    <ImageView
        android:id="@+id/about_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/info"
        app:layout_constraintBottom_toTopOf="@id/container_cv"
        app:layout_constraintEnd_toEndOf="@id/container_cv" />

</androidx.constraintlayout.widget.ConstraintLayout>